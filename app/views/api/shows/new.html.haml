.wrap
  .api_container
    = render 'header', title: 'Add A New Show'

    %a{ href: 'http://thetvdb.com/api/GetSeries.php?seriesname=' }
      thetvdb series search
    = form_tag(api_search_path, method: :post) do
      = label_tag(:q, "Search tvdb:")
      = text_field_tag(:q)
      = submit_tag("Search")

    %br
    %br

    = form_for @show, url: { action: 'create' }, html: { method: 'post' } do |f|
      = f.label 'Name: '
      %br
      = f.text_field :name
      %br
      %br
      = f.label 'TVDB ID: '
      %br
      = f.text_field :tvdbId
      %br
      %br
      = f.submit 'Add Show'
